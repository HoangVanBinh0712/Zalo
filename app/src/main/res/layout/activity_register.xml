<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-medium"
        android:paddingTop="15sp"
        android:text="REGISTER"
        android:textColor="#C90343E5"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtPhonenum1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20sp"
        android:text="How we can contact you?"
        android:textColor="#AA4B5151"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtPhonenum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPhonenum1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edt_background"
        android:drawableLeft="@drawable/phone_white"
        android:drawablePadding="15dp"
        android:hint="Phone number"
        android:inputType="phone"
        android:padding="15dp"
        android:textColorHint="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtFullName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtPhonenum"
        android:layout_marginLeft="10dp"
        android:text="What is your name?"
        android:textColor="#AA4B5151"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtFullName1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edt_background"
        android:drawableLeft="@drawable/person_white"
        android:drawablePadding="15sp"
        android:hint="Fullname"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:textColorHint="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtBirthday1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtName"
        android:layout_marginLeft="10dp"
        android:text="When did you come to this world?"
        android:textColor="#AA4B5151"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtBirthday1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtBirthday1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edt_background"
        android:drawableLeft="@drawable/calendar_white"
        android:drawablePadding="15sp"
        android:hint="Birthday"
        android:padding="15dp"
        android:textColorHint="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtSex1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtBirthday1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="50sp"
        android:text="Gender: "
        android:textColor="#AA4B5151"
        android:textSize="18sp"
        android:textStyle="bold" />

    <com.google.android.material.radiobutton.MaterialRadioButton
        android:id="@+id/checkMale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtSex1"
        android:layout_marginLeft="10dp"
        android:buttonTint="#0dd1fc"
        android:text="Male"
        android:textColor="#AA4B5151"
        android:textStyle="bold" />

    <com.google.android.material.radiobutton.MaterialRadioButton
        android:id="@+id/checkFemale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtSex1"
        android:layout_toRightOf="@id/checkMale"
        android:buttonTint="#0dd1fc"
        android:text="Female"
        android:textColor="#AA4B5151"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtPassword1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkMale"
        android:layout_marginLeft="10sp"
        android:text="Your secret word"
        android:textColor="#AA4B5151"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtPassword1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPassword1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edt_background"
        android:drawableLeft="@drawable/lock_white"
        android:drawablePadding="15sp"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="15dp"
        android:textColorHint="@color/black"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogin"
        android:layout_width="350sp"
        android:layout_height="75sp"
        android:layout_below="@+id/edtPassword1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:backgroundTint="#0343E5"
        android:fontFamily="sans-serif-thin"
        android:text="Create account"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="30sp" />

    <TextView
        android:id="@+id/txtRegisterToLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:text="Click here if you already have an account"
        android:textColor="#E56C03"
        android:textSize="16sp" />

</RelativeLayout>