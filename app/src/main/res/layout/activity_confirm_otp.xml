<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmOtpActivity"
    android:background="@color/white">

    <Button
        android:id="@+id/btn_back_verify_otp"
        android:layout_width="50sp"
        android:layout_height="35sp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="20sp"
        android:background="?android:attr/selectableItemBackground"
        android:drawableStart="@drawable/icon_btn_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/img_logo_verify_otp"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_marginTop="25sp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_verify_otp"
        app:layout_constraintTop_toBottomOf="@+id/btn_back_verify_otp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/txt_nofi1"/>

    <TextView
        android:id="@+id/txt_nofi1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34sp"
        android:text="OTP Verification"
        android:textSize="30sp"
        android:textColor="#0F1828"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toBottomOf="@+id/img_logo_verify_otp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/txt_nofi2"/>

    <TextView
        android:id="@+id/txt_nofi2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="Enter Code"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#0F1828"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toBottomOf="@+id/txt_nofi1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/nofi3"/>

    <TextView
        android:id="@+id/nofi3"
        android:layout_width="220sp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:text="We have sent you an SMS with the code to 0584577843"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/txt_nofi2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/linearCode"/>

    <LinearLayout
        android:id="@+id/linearCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="40sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nofi3"
        app:layout_constraintBottom_toTopOf="@+id/btn_confirmOtp">

        <EditText
            android:id="@+id/editTextInput1"
            android:layout_width="50sp"
            android:layout_height="55sp"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:textAlignment="center"
            android:text="1"
            android:maxLength="1"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@drawable/otp_background"/>

        <EditText
            android:id="@+id/editTextInput2"
            android:layout_width="50sp"
            android:layout_height="55sp"
            android:layout_marginStart="10sp"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:textAlignment="center"
            android:text="1"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@drawable/otp_background"/>

        <EditText
            android:id="@+id/editTextInput3"
            android:layout_width="50sp"
            android:layout_height="55sp"
            android:layout_marginStart="10sp"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:textAlignment="center"
            android:text="1"
            android:maxLength="1"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@drawable/otp_background"/>

        <EditText
            android:id="@+id/editTextInput4"
            android:layout_width="50sp"
            android:layout_height="55sp"
            android:layout_marginStart="10sp"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:inputType="number"
            android:textAlignment="center"
            android:text="1"
            android:maxLength="1"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@drawable/otp_background"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_confirmOtp"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_marginStart="65sp"
        android:layout_marginEnd="65sp"
        android:layout_marginTop="32sp"
        android:background="@drawable/button_styles"
        android:text="Confirm"
        android:textColor="#F7F7FC"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/linearCode"
        app:layout_constraintBottom_toTopOf="@+id/btn_resendCode"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/btn_resendCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend Code"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textColor="#002DE3"
        android:layout_marginTop="40sp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@+id/btn_confirmOtp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>